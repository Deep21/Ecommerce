<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fzef"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="2dp">

    <TextView
        android:id="@+id/title_invoice_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choisissez votre mode de livraison"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_marginTop="20dp" />

    <TextView
        android:id="@+id/last_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Small Text"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_alignTop="@+id/radioButton"
        android:layout_alignLeft="@+id/carrier_name"
        android:layout_alignStart="@+id/carrier_name" />

    <TextView
        android:id="@+id/prix_ttc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Small Text"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_below="@+id/last_name"
        android:layout_alignLeft="@+id/last_name"
        android:layout_alignStart="@+id/last_name" />

    <TextView
        android:id="@+id/carrier_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Small Text"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_marginTop="36dp"
        android:layout_below="@+id/title_invoice_address"
        android:layout_toRightOf="@+id/radioButton"
        android:layout_toEndOf="@+id/radioButton"
        android:layout_marginLeft="34dp"
        android:layout_marginStart="34dp" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/radioButton"
        android:checked="true"
        android:layout_below="@+id/carrier_name"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


</RelativeLayout>
